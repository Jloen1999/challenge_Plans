{
  "name": "challenge-plans-backend",
  "version": "1.0.0",
  "description": "Backend para la aplicaci√≥n Challenge Plans",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "setup-db": "ts-node src/create-tables.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d ./src/data-source.ts -n",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/data-source.ts",
    "verify-db": "ts-node src/verify-database.ts",
    "verify-conn": "ts-node src/tests/verify-connection.ts",
    "migration:triggers": "ts-node src/scripts/run-triggers-migration.ts",
    "migration:notifications": "ts-node src/scripts/run-notifications-migration.ts",
    "migration:dropdb": "ts-node src/scripts/run-drop-db.ts",
    "migration:run": "npm run typeorm -- migration:run -d ./src/data-source.ts",
    "migration:initial": "ts-node src/scripts/run-initial-migration.ts",
    "migration:seed": "ts-node src/scripts/run-seed-data.ts",
    "test:auth": "jest src/tests/auth.test.ts --detectOpenHandles"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.31.0",
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/joi": "^17.2.2",
    "axios": "^1.8.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fs": "^0.0.1-security",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "path": "^0.12.7",
    "pg": "^8.11.1",
    "pg-promise": "^11.5.0",
    "react-icons": "^5.5.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.4",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.2",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
